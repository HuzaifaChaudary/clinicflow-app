# ClinicFlow Backend Environment Variables
# Copy this file to .env and fill in your values

# Environment
ENV=development
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://clinicflow:clinicflow_password@localhost:5432/clinicflow

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI (for AI intake summaries)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# CORS Origins (JSON array)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Celery (optional)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
