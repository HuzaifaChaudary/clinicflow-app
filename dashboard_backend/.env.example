# ClinicFlow Backend Environment Variables
# Copy this file to .env and fill in your values

# =====================
# DATABASE
# =====================
DATABASE_URL=postgresql://clinicflow:clinicflow@localhost:5432/clinicflow

# =====================
# AUTHENTICATION
# =====================
JWT_SECRET_KEY=your-super-secret-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# =====================
# OPENAI (Required for AI features)
# =====================
OPENAI_API_KEY=sk-your-openai-api-key

# =====================
# GOOGLE OAUTH (Optional)
# =====================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# =====================
# TWILIO (Voice AI & SMS)
# =====================
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_VOICE_URL=https://your-domain.com/api/voice/webhook

# =====================
# SMTP EMAIL (Free - Gmail, Outlook, etc.)
# =====================
# For Gmail: Enable 2FA and create App Password at https://myaccount.google.com/apppasswords
# For Outlook: Use smtp-mail.outlook.com port 587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=ClinicFlow
SMTP_USE_TLS=true

# =====================
# VOICE AI CONFIGURATION
# =====================
VOICE_AI_ENABLED=true
VOICE_AI_MODEL=gpt-4
VOICE_AI_VOICE=alloy

# =====================
# AUTOMATION CONFIGURATION
# =====================
AUTOMATION_ENABLED=true
CONFIRMATION_REMINDER_HOURS=24
INTAKE_REMINDER_HOURS=48
FOLLOW_UP_REMINDER_DAYS=7

# =====================
# APPLICATION
# =====================
ENVIRONMENT=development
DEBUG=true
FRONTEND_URL=http://localhost:5173
